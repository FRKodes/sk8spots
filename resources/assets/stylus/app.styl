/*COLORS PALLETE*/
verdebase = #67CDA7
verde1 = #07CED2
verde2 = #419FA2
verde3 = #165B5C
turquesa = #07CED2
gris1 = #F2F2F2
gris2 = #E2E2E2
rojo = red
.verde1
	color verde1
.verde2
	color verde2
.verde3
	color verde3
.back-verde2
	background-color verde2
.back-verde3
	background-color verde3
.gris1
	color gris1
.gris2
	color gris2
.rojo
	color rojo
.lower
	text-transform lowercase
.capitalize
	text-transform capitalize
.img-cien
	width 100%
	height auto
	display block
.m-top-20
	margin-top 20px
.m-bottom-0
	margin-bottom 0px
.m-top-0
	margin-top 0px
.m-bottom-20
	margin-bottom 20px
h1
	color verde2
a
	transition color .5s ease
	color verde3
	&:hover
		color verde2
		cursor pointer
		transition color .5s ease
h1
	text-align center
h3
	font-weight 600
.share
	white-space normal
.italic
	font-style italic
.green
	color verde2
.green-btn
	background-color verde2
	border-color verde2
	transition background-color .5s ease
	&:hover
		background-color verde1
		border-color verde1
		color black
		transition all .5s ease
	&:focus
		background-color verde3
		border-color verde3
	&:active
		background-color verde3
		border-color verde3
body
	background-color gris1
	font-family 'Lato', sans-serif
	font-weight 600
	padding-top 50px
.navbar-default	
	background-color verdebase
	border-color verde2
	.navbar-brand
	.navbar-nav>li>a
		color white
		transition color .5s ease
		&:hover
			color verde3
			transition color .5s ease
	.navbar-nav>.active>a
		background-color verde3
		color verde1
		transition background-color .5s ease
		&:hover
			background-color verde2
			color verde3
			transition background-color .5s ease
	.navbar-nav>.open>a,
	.navbar-nav>.open>a:focus,
	.navbar-nav>.open>a:hover
		background-color verde3
		color verde1
		transition background-color .5s ease
.dropdown-menu
	background-color verde3
	border 1px solid rgba(verde3, .9)
	padding 0
	li
		padding 0
		width 100%
		a
			color white
			display block
			padding-bottom 10px
			padding-top 10px
			text-align right
			transition color .5s ease
			&:hover
				background-color verde3
				color verde1
				transition color .5s ease
.panel-default
	.panel-heading
		background-color verde3
		color white
.last-one-home-item
	margin-top 20px
	margin-bottom 20px
	img
		width 100%
		height auto
.map
	background-size cover
	border-bottom 1px dashed verde3
	height 350px
	text-align center
#map
	height 100%
	display block
	background-color gray
.spots-list
	padding-top 30px
.btn.btn-primary
	padding-left 30px
	padding-right 30px
	text-transform uppercase
	letter-spacing 1px
.map-drag-container
	display block
	height auto
	overflow hidden
	margin-bottom 20px
.map-drag
	background-color gray
	display block
	height 300px
	width 100%
.adsense
	margin-top 60px
	margin-bottom 40px
	overflow hidden
.pagination>li>a
	color verde2
	&:hover
		color verde3
.pagination>.active>span
	background-color verde2
	border-color verde2
	transition background-color .5s ease
	&:hover
		background-color verde3
		transition background-color .5s ease
.profile-up
	padding 30px 0
.profile-pic
	figure
		padding 0
		img
			border 1px solid gris1;
			border-radius 50%
			width 100%
			height auto
			display block
.no-spots
	margin-top 40px
	margin-bottom 50px
	text-decoration underline
.info-container
	h1
		margin-top 0
	.username
		color black
		font-size 2em
		font-weight bold
		text-align left
.extra-info
	margin-top 10px
	ul
		padding 0
	li
		display inline-block
		margin-right 30px
		a:hover
			text-decoration none
		strong
			color black
.line-heading
	border-bottom 1px solid rgba(verde2, .8)
.inactive-spot a
	color rgba(verde3, .5)
.spot-detail
	.detail-map
		height auto
		border none
		margin-bottom 30px
		overflow hidden
		img
			width 100%
			height auto
.spot-images
	.image-item
		margin-bottom 30px
		height 120px
		overflow hidden
		img
			width 100%
			height auto
				
/*CONTACTO*/
.alert_field
	color rgba(red, .8)
	display none
.email-sent-alert
	background-color verde3
	color white
	text-align center
	padding 40px 30px
	font-size 1.2em
	position relative
	margin-top -300px
	display none
textarea
	resize none
footer
	color white
	background verdebase
	border-top 1px solid verde2
	height auto
	text-align center
	padding-top 30px
	padding-bottom 10px
	.social
		text-align center
		padding 0
		li
			display inline-block
			margin-right 10px
			&:last-of-type
				margin-right 0
			a
				font-size 2em
				transition color .5s ease
				// &.icon-youtube
				// 	color #E62117
				// &.icon-instagram
				// 	color black
				// &.icon-facebook
				// 	color #3B5998
				&:hover
					transition color .5s ease
					text-decoration none
@media screen and (min-width: 480px)
	.spot-detail
		.spot-images
			.image-item
				height 200px
@media screen and (min-width: 768px)
	.map-drag-container
		p
			text-align center
	.nav>li>a
		padding 15px 6px
	.email-sent-alert
		padding 100px 50px
		font-size 1.4em
		margin-top -350px
	.last-one-home-item
		margin-top 20px
		margin-bottom 20px
		.photo
			overflow hidden
			height 120px
			display flex
			align-items center
	footer
		.social-column
			text-align left
			.social
				text-align left
				padding 0
				li
					display inline-block
					margin-right 10px
					a
						font-size 2em
						transition color .5s ease
						&:hover
							transition color .5s ease
							text-decoration none
		.contact-column
			display flex
			justify-content flex-end
			height 80px
			p
				align-self center
	.map
		height 450px
@media screen and (min-width: 992px)
	.nav>li>a
		padding 15px
	.map
		height 550px
	.map-drag
		height 600px
	.last-one-home-item
		.photo
			overflow hidden
			height 130px
			display flex
			align-items center
@media screen and (min-width: 1200px)
	.last-one-home-item
		.photo
			height 150px